{{#section 'nav'}}
<div id="navbar" class="collapse navbar-collapse">
   <ul class="nav navbar-nav">
      <li><a href="/history">History</a></li>
   </ul>
   <ul class="nav navbar-nav navbar-right">
      {{#if user}}
      <li><a href="/profile">Welcome, {{user.name}}</a></li>
      <li><a href="/logout">logout</a></li>
      {{else}}
      <li><a href="/login">login</a></li>
      {{/if}}
   </ul>
</div>
{{/section}}
{{#section 'head'}}
<div class="col-md-12">
   <h1><span class="glyphicon glyphicon-search"></span> Results match "{{title}}"</h1>
</div>
{{/section}}
<section id="main">
   <div class="container">
   <div class="row">
      <div class="col-md-9">
         <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
               <h3 class="panel-title">Posts</h3>
            </div>
            <div class="panel-body">
               {{#each posts}}
               <div class="well">
                  <h3><a href="/u/{{name}}/{{time.day}}/{{title}}">{{title}}</a></h3>
                  <p class="grey">{{time.date}} â€” {{name}}</p>
                  {{{post}}}
                  <span class="grey">Tags:</span>
                  {{#each tags}}
                  <span><a href="/tags/{{.}}">{{.}}</a></span>
                  {{/each}}
               </div>
               {{/each}}
            </div>
         </div>
      </div>
   </div>
</section>
